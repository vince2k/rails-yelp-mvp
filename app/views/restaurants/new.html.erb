<%= simple_form_for (@restaurant) do |f|%>
<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
</div>
<div class="form-actions">
  <%= f.button :submit, "Submit restaurant", class: "btn btn-primary" %>
</div>
<% end %>
